{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}